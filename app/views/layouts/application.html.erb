<!DOCTYPE html>
<html>
  <head>
    <title>All About Amiibo</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <h1>All About Amiibo</h1>
      <p><%= link_to 'Home', root_path%> | <%= link_to 'About', about_path%> | 
        <%= form_tag(results_search_index_path, method: "get") do %>
          <%= label_tag(:q, "Search for:") %>
          <%= text_field_tag(:q) %>
          <%= submit_tag("Search") %>
        <% end %>
      </p>
    </header>
  <%= yield %>
  </body>
</html>
